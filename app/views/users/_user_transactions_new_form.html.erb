<%= form_with(model: @transaction, local: true) do |f| %>

  <%= f.hidden_field :buyer_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :item_id %>

    <%= f.text_field :item_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status_id %>

    <%= f.collection_select :status_id, Status.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create transaction", class: "btn btn-block btn-outline-secondary" %>
<% end %>
