<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Item description</dt>
      <!-- Display item_description start -->
      <dd><%= item.item_description %></dd>
      <!-- Display item_description end -->

      <dt>Item status</dt>
      <!-- Display item_status_id start -->
      <dd><%= item.item_status_id %></dd>
      <!-- Display item_status_id end -->

      <dt>Item title</dt>
      <!-- Display item_title start -->
      <dd><%= item.item_title %></dd>
      <!-- Display item_title end -->

      <dt>Item category</dt>
      <!-- Display item_category_id start -->
      <dd><%= item.item_category_id %></dd>
      <!-- Display item_category_id end -->

      <dt>Item location</dt>
      <!-- Display item_location start -->
      <dd><%= item.item_location %></dd>
      <!-- Display item_location end -->

      <dt>Owner</dt>
      <!-- Display owner_id start -->
      <dd><%= item.owner_id %></dd>
      <!-- Display owner_id end -->

      <dt>Price</dt>
      <!-- Display price start -->
      <dd><%= item.price %></dd>
      <!-- Display price end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link item start -->
      <div class="col">
        <%= link_to edit_item_url(item), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link item end -->

      <!-- Delete link item start -->
      <div class="col">
        <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link item end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
