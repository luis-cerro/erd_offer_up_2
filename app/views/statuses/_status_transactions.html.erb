<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Transactions

    <a data-toggle="collapse" href="#status_transactions_new_form">
      Add transaction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @status.transactions.each do |transaction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to transaction, transaction %>

        <%= link_to transaction, method: :delete, data: { confirm: "Do you really want to delete this transaction" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="status_transactions_new_form">
        <%= render partial: "statuses/status_transactions_new_form" %>
      </div>
    </div>

  </ul>
</div>
